<Application xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             x:Class="SilverDesigner.App"
             >
    <Application.Resources>
        <LinearGradientBrush x:Key="gradientBack1" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF6E6E6E" Offset="0"/>
            <GradientStop Color="DarkGray" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="gradientBack1Diagonal" EndPoint="0,0" StartPoint="1,1">
            <GradientStop Color="#FF6E6E6E" Offset="1"/>
            <GradientStop Color="DarkGray" Offset="0"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="gradientBack2" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFADADAD"/>
            <GradientStop Color="#FFF7F5F5" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="gradientBack3" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFD0D0D0" Offset="0"/>
            <GradientStop Color="#FF8F8F8F" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="gradientBack4" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF01364D" Offset="0"/>
            <GradientStop Color="#FF0A6A93" Offset="1"/>
        </LinearGradientBrush>
    </Application.Resources>
</Application>
